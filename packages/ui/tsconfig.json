{
  "extends": "tsconfig/base.json",
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "rootDir": "./src",
    "declarationDir": "dist/types",
    "sourceMap": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
