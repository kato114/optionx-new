{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "public/*": ["../public/*"]
    },
    "target": "EsNext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "sentry.server.config.ts",
    "sentry.edge.config.ts",
    "sentry.client.config.ts"
  ],
  "exclude": ["node_modules", "public"]
}
